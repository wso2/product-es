<div class='content-div'>
    <div class="row-fluid">
        <div class="span12 asset-view-container">
            <div class="widget wlightblue widget-lifecycle">
                <div class="widget-head">
                    <div class="pull-left">
                        Lifecycle - {{assets.name}}
                    </div>
                    {{#if assets.lifecycleState}}
                        <span id='state' class="pull-right">{{assets.lifecycleState}}</span>
                    {{/if}}
                    <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                    <div class="info-div alert">
                        <a data-dismiss="alert" class="close">x</a><i class="icon-info-sign"></i><span></span>
                    </div>
                    <form class="form-horizontal lifecycle">
                        <div class="lifecycle-tip">
                            <i class="icon-long-arrow-up"></i> &nbsp; Click on a circle to change state
                        </div>
                        <div>
                            <div id='checklist'></div>
                        </div>
                        <div id='canvas'>
                        </div>
                        <!--
                        <div class="form-actions" id='form-actions'>
                                                </div>-->
                    </form>
                </div>
            </div>
            <legend>
                History
            </legend>
            <table id='lc-history' class="table">
            </table>
        </div>
    </div>
</div>
<div id="commentModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel"
     aria-hidden="true">
    <div class="modal-header">
        <h3 id="commentModalLabel">Add a comment</h3>
    </div>
    <div class="modal-body">
        <textarea class="span12" id="commentModalText"></textarea>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button id="commentModalSave" class="btn btn-primary">Submit change</button>
    </div>
</div>
<div id="deleteModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel"
     aria-hidden="true">
    <div class="modal-header">
        <h3 id="deleteModalLabel">Delete Asset</h3>
    </div>
    <div class="modal-body">
        <p class="span12" id="deleteModalText">Are you sure you want to delete this asset permanantly?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
        <button id="deleteModalSave" class="btn btn-primary">Yes</button>
    </div>
</div>