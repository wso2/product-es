{{#if popularAssets}}

    <div id="asset-slideshow-cont">
        <div class="html_carousel">
            <div id="asset-slideshow">
                {{#each popularAssets}}
                    <div class="slide">
                        {{#attributes}}
							<div class="asset-banner">
                                <img src="{{#if ../banner}}{{url ""}}/storage/{{../../type}}/{{../../id}}/{{../../banner}}{{/if}}">
                            </div>
                        	<div class="asset-intro-box">
                            	<div><img src="{{#if ../thumbnail}}{{url ""}}/storage/{{../../type}}/{{../../id}}/{{../../thumbnail}}{{/if}}"></div>
                            	<div class="asset-intro-inner">
	                            	<h3><span>{{overview_name}}</span>
	                               		<small>{{overview_version}}</small>
	                            	</h3>
	                            	<div class="star-rating">
										<div class="asset-rating">
				                            <div class="asset-rating-{{../avgRating}}star">
				
				                            </div>
				                        </div>
										<small> by {{overview_provider}} </small>
									</div>
                            	</div>
							
								<a data-type="gadget" class="btn btn-primary" id="btn-add-gadget"
                           href="{{url "/assets"}}/{{../type}}/{{../id}}">View</a>
							</div>
                        {{/attributes}}

                    </div>
				{{/each}}
            </div>

            <div class="clearfix"></div>
            <a class="prev" id="asset-slideshow-prev" href="#"><span>prev</span></a>
            <a class="next" id="asset-slideshow-next" href="#"><span>next</span></a>

            <div class="pagination" id="asset-slideshow-pag"></div>

        </div>
    </div>
    <div id="slideshow-clearfix"></div>
{{/if}}


{{#each recentAssetsByType}}
    <div class="assets-container">
        <h3 class="asset-type-default asset-title-separator asset-type-{{rxt.shortName}}"><span><a href="{{url "/asts/"}}{{rxt.shortName}}/list?">Recent {{rxt.pluralLabel}}</a></span>

            <div class="pagination top-asset-slideshow-pag assetSliderPag" id="top-asset-slideshow-pag-{{rxt.shortName}}"></div>
        </h3>
    <div class="top-asset-slideshow-cont">
            <div class="html_carousel">
                <div class="assetSlider" id="top-asset-slideshow-{{rxt.shortName}}">
                    {{#if assets}}
                        {{#each assets}}
                            {{#attributes}}
                                <div class="slide asset" data-id="{{../id}}" data-type="{{../type}}">
                                    <a href="#">
                                        <div class="asset-icon">
                                            {{#if ../indashboard}}
                                                <i class="icon-bookmark store-bookmark-icon"></i>
                                            {{/if}}
                                            <a href="{{url "/asts"}}/{{../type}}/details/{{../id}}"><img
                                                    src="{{#if ../thumbnail}}{{url ""}}/storage/{{../../type}}/{{../../id}}/{{../../thumbnail}}{{/if}}"></a>
                                        </div>
                                    </a>

                                    <div class="asset-details">
                                        <div class="asset-name">
                                            <a href="{{url "/asts"}}/{{../type}}/details/{{../id}}"><h4>{{overview_name}}</h4>
                                            </a>
                                        </div>
                                        <div class="asset-rating">
                                            <div class="asset-rating-{{../avgRating}}star">

                                            </div>
                                        </div>
                                        <div class="asset-author-category">
                                            <ul>
                                                <li>
                                                    <h4>{{t "Category"}}</h4>
                                                    <a class="asset-category" href="#">{{../../rxt.singularLabel}}</a>
                                                </li>
                                                <li>
                                                    <h4>{{t "Author"}}</h4>
                                                    <a class="asset-author" href="#">{{overview_provider}}</a>
                                                </li>

                                            </ul>
                                            {{>top-assets-utilization ..}}
                                        </div>
                                    </div>
                                </div>
                            {{/attributes}}
                        {{/each}}
                    {{else}}
                        <div class="top-assets-empty-assert">{{t "We couldn't find anything for you."}}</div>
                    {{/if}}
                </div>
                <div class="clearfix"></div>

            </div>

        </div>
    </div>
{{/each}}